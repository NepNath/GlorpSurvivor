{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-ninja",
      "displayName": "Windows Release (Ninja)",
      "description": "Installation propre via Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CONAN_PROFILE": "default"
      },
      "environment": {
        "VSCMD_START_DIR": "${sourceDir}"
      }
    }
  ]
}